<div class='scroller' >
  <div class='scroller-content'>
    <h3>{{view Noted.TitleView valueBinding="title"}}</h3>
      <ul tabindex='0'>
        {{#if controller.sortedItems}}
          {{#each listItem in controller.sortedItems}}
            {{view Noted.ItemView listItemBinding=listItem}}
          {{/each}}
        {{else}}
          <div class="placeholder">This note has no body. Click here and press enter to create a new one.</div>
        {{/if}}
      </ul>
  </div>
</div>